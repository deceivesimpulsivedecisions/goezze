<style>
    .ea-lightbox {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        text-align: center;
        z-index: 999;
    }

    .ea-lightbox img {
        max-width: 80%;
        max-height: 80%;
        margin-top: 10%;
    }

    .close-lightbox {
        position: absolute;
        top: 20px;
        right: 20px;
        background: #fff;
        color: #000;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
    }
</style>

<div class="form-widget row ">
    {% for image in field.value %}
        <a href="#" class="ea-lightbox-thumbnail" data-ea-lightbox-content-selector="#ea-lightbox-{{ image.id }}">
            <img src="/uploads/packages/{{ image.image }}" class="img-fluid">
        </a>

        <div id="ea-lightbox-{{ image.id }}" class="ea-lightbox">
            <img src="/uploads/packages/{{ image.image }}">
            <button class="close-lightbox">Close</button>
        </div>
    {% endfor %}
</div>