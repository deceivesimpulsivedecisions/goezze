<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="{{ path('homepage') }}">
                <img src="{{ asset('images/logo.png') }}" width="30" class="d-inline-block align-top" alt="Goezze">
                Goezze
            </a>

            <div class="d-block d-lg-none ml-auto pr-2">
                <ul class="navbar-nav flex-row">
                    <li class="nav-item  contact-us"><a class="nav-link contact-btn-secondary px-2" >Contact Us</a></li>
                </ul>
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarToggler">
                {% set route = app.request.attributes.get('_route') %}
                <ul class="navbar-nav">
                    <li class="nav-item {{ route == 'homepage' ? 'active' }} px-2"><a class="nav-link" href="{{ path('homepage') }}">Home</a></li>
                    <li class="nav-item {{ route == 'app_category_list' ? 'active' }} px-2"><a class="nav-link" href="{{ path('app_category_list') }}">Categories</a></li>
                    {#                <li class="nav-item {{ route == 'applications' ? 'active' }} px-2"><a class="nav-link" href="{{ path('applications') }}">Applications</a></li>#}
                    {#                <li class="nav-item {{ route == 'colors' ? 'active' }} px-2"><a class="nav-link" href="{{ path('colors') }}">Colors</a></li>#}
                    {#                <li class="nav-item {{ route == 'brands' ? 'active' }} px-2"><a class="nav-link" href="{{ path('brands') }}">Brands</a></li>#}
                    {#                <li class="nav-item {{ route == 'articles' ? 'active' }} px-2"><a class="nav-link" href="{{ path('articles') }}">Articles</a></li>#}
                    <li class="nav-item px-2 contact-us d-none d-lg-block"><a class="nav-link contact-btn-secondary py-2">Contact Us</a></li>
                </ul>
                <ul class="navbar-nav">
                    {% if route != "homepage" %}
                        <li class="nav-item mx-lg-1 my-lg-0 my-1"><div id="search"></div></li>
                    {% endif %}
                    {% if app.user %}
                        <li class="nav-item dropdown">
                            <a class="btn nav-link dropdown-toggle" id="navbarDropdownMenuLink-4" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user"></i> {{ app.user.email }} </a>
                            <div class="btn dropdown-menu dropdown-menu-right dropdown-cyan" aria-labelledby="navbarDropdownMenuLink-4">
                                {#                            {% if not app.user.type %}#}
                                {#                                <a class="dropdown-item text-primary" href="{{ path('admin') }}" target="_blank">Admin</a>#}
                                {#                            {% endif %}#}
                                {#                            <a class="dropdown-item" href="{{ path('orders') }}">My Orders</a>#}
                                {#                            <a class="dropdown-item" href="{{ path('profile') }}">Profile</a>#}
                                                            <a class="dropdown-item" href="{{ path('app_logout') }}">Log out</a>
                            </div>
                        </li>
                        <li class="nav-item" id="cart" data-token="{{ app.session.get('token') }}"> </li>
                    {% else %}
                        <li class="nav-item mx-lg-1 my-lg-0 my-1"><a class="btn btn-outline-secondary login" href="{{ path('login') }}">Login</a></li>
                        <li class="nav-item mx-lg-1 my-lg-0 my-1"><a class="btn btn-outline-secondary sign-up" href="{{ path('signup') }}">Sign Up</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>

    </nav>
        {% block body %}{% endblock %}
    </body>
</html>
