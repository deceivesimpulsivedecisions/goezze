{% extends 'base.html.twig' %}

{% block title %}Category Listing{% endblock %}

{% block body %}
    <div class="category-body">
        <div class="category-wrapper">
            <div class="d-flex justify-content-center align-items-center mb-5 page-title">
                <h1>Our <span class="text-primary">Categories</span></h1>
            </div>
            <div class="container d-flex flex-wrap justify-content-around align-items-center gap-4 mb-5">
                {% for category in categories %}
                    <a href="{{ path('app_category_categoryPackages', {slug : category.slug}) }}" class="text-decoration-none">
                        <div class="category-card">
                            <div>
                                <img class="rounded" src="/uploads/category/{{ asset(category.image) }}" />
                            </div>
                            <div class="details">
                                <h5 class="m-0">{{ category.name | capitalize }}</h5>
                                <p class="m-0">{{ category.packages | length }} packages</p>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>

            <div class="container d-flex flex-wrap justify-content-around align-items-center gap-4">
                {% for category in categories %}
                    <a href="{{ path('app_category_categoryPackages', {slug : category.slug}) }}" class="text-decoration-none text-center">
                        <div class="category-list rounded-circle overflow-hidden position-relative text-center ">
                            <img src="/uploads/category/{{ asset(category.image) }}" />
                        </div>
                        <div><h6 class="centered">{{ category.name | capitalize }}</h6></div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}
