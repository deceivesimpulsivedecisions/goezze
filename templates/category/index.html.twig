{% extends 'base.html.twig' %}

{% block title %}Category Listing{% endblock %}

{% block body %}
    <div class="category-body">
        <div class="category-wrapper">
            <div class="hero-image position-relative mb-5">
                <img src="{{ asset('images/all-package-hero-image.jpg') }}" alt="all-categories" />
                <div class="position-absolute d-flex justify-content-center align-items-center mb-5 page-title">
                    <h1 class="d-flex gap-2">Our <span class="text-primary">Categories</span></h1>
                </div>
            </div>

            <div class="container d-flex flex-wrap justify-content-around align-items-center gap-4 mb-5">
                {% for category in categories %}
                    <a href="{{ path('app_category_categoryPackages', {slug : category.slug}) }}" class="text-decoration-none">
                        <div class="category-card">
                            <div>
                                {% if category.image %}<img class="rounded" src="{{ asset('uploads/category/') }}{{ asset(category.image) }}" alt="" />{% endif %}
                            </div>
                            <div class="details my-1">
                                <h5 class="m-0">{{ category.name | capitalize }}</h5>
                                <p class="m-0">{{ category.packages | length }} packages</p>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}
