{% extends 'base.html.twig' %}

{% block title %}Hello PackagesController!{% endblock %}

{% block body %}

<div class="all-packages-wrapper" data-url="{{ path('app_packages_fetch') }}">
    <div class="hero-image position-relative">
        <img src="{{ asset('images/all-package-hero-image.jpg') }}" alt="all-categories" />
        <h2 class="text-white position-absolute">All Packages</h2>
    </div>

    <div class="container">
        <div class="search-close d-flex gap-3 my-3">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search">
                <span class="input-group-text search-packages cursor-pointer" id="basic-addon2"><i class="fas fa-search"></i></span>
            </div>

            <button class="btn btn-outline-secondary d-lg-none grabPromo"><i class="fas fa-filter"></i></button>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-3 d-lg-block  d-none slideDown">
                <h3 class="my-3 text-secondary">Filters</h3>

                <div class="filters">
                    <div class="mt-3 mb-5 max-230">
                        <h5 class="text-primary">Category Types</h5>
                        {% for category in categories %}
                            <div class="d-flex justify-content-between my-2">
                                <div class="form-check m-0">
                                    <input class="form-check-input" type="checkbox" value="{{ category.slug }}" id="{{ category.slug }}" name="category">
                                    <label class="form-check-label text-secondary font-16" for="{{ category.slug }}">
                                        {{ category.name }}
                                    </label>
                                </div>
                                <p class="m-0 text-primary font-16">{{ category.packages | length }}</p>
                            </div>

                        {% endfor %}
                    </div>

                    <div class="my-5 max-230">
                        <h5 class="text-primary">Destinations</h5>
                        {% for destination in destinations %}
                            <div class="d-flex justify-content-between my-2">
                                <div class="form-check m-0">
                                    <input class="form-check-input" type="checkbox" value="{{ destination.name | lower }}" id="{{ destination.name | lower }}" name="destination">
                                    <label class="form-check-label text-secondary font-16" for="{{ destination.name | lower }}">
                                        {{ destination.name }}
                                    </label>
                                </div>
                                <p class="m-0 text-primary font-16">{{ destination.packages | length }}</p>
                            </div>

                        {% endfor %}
                    </div>
                </div>

            </div>
            <div class="col-lg-9">
                <div class="loader d-flex justify-content-center align-items-center h-100">
                    <div class="spinner-border" role="status">
                    </div>
                </div>
                <div id="result">

                </div>
            </div>
        </div>


    </div>
</div>
    {% endblock %}
